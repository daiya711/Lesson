{
  "name": "shelf-designer",
  "version": "1.0.0",
  "description": "収納棚設計・デザインプラットフォーム with Hono + Cloudflare D1",
  "scripts": {
    "dev": "wrangler pages dev --d1 DB=shelf-designer-db",
    "deploy": "wrangler pages deploy",
    "d1:create": "wrangler d1 create shelf-designer-db",
    "d1:migrate": "wrangler d1 migrations apply shelf-designer-db",
    "d1:console": "wrangler d1 console shelf-designer-db",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:watch": "vitest --watch"
  },
  "dependencies": {
    "hono": "^4.6.3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^22.8.6",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4",
    "wrangler": "^4.31.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "shelf-designer",
    "3d",
    "three.js",
    "hono",
    "cloudflare-pages",
    "d1-database"
  ],
  "author": "Shelf Designer Team",
  "license": "MIT"
}
